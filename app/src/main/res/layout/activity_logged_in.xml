<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.together.stand.LoggedIn">

    <Button
        android:onClick="register_volunteer"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register Me as Volunteer"
        android:id="@+id/beVolunteer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Donating Blood is a novel. It saves life"
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#3b3a3a"
        android:textSize="20dp" />

    <Button
        android:onClick= "register_organisation"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register me as Organisation"
        android:id="@+id/beOrganisation"
        android:layout_above="@+id/beVolunteer"
        android:layout_centerHorizontal="true" />

    <TextView
        android:onClick="getList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To see the list of volunteer click here"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="143dp"
        android:textSize="20dp"
        android:clickable="true" />
</RelativeLayout>
